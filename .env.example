# Environment Configuration
# Set the test environment: development, staging, production, or ci
TEST_ENV=development

# Override default users for different environments
TEST_STANDARD_USER=standard_user
TEST_LOCKED_USER=locked_out_user
TEST_PROBLEM_USER=problem_user

# Override default password (especially for production)
TEST_PASSWORD=secret_sauce

# Override URLs if needed
TEST_BASE_URL=https://www.saucedemo.com
TEST_API_URL=https://www.saucedemo.com/api

# Timeouts (in milliseconds)
TEST_TIMEOUT=10000
TEST_NAVIGATION_TIMEOUT=30000

# Production-specific credentials (set in CI/CD secrets)
SAUCE_USERNAME=standard_user
SAUCE_PASSWORD=secret_sauce

# Allure reporting
ALLURE_RESULTS_FOLDER=allure-results
ALLURE_REPORT_FOLDER=allure-report

# Browser options (for development)
HEADLESS=true
SLOW_MO=0