{
  "name": "playwright-test-automation---saucelab",
  "version": "1.0.0",
  "description": "Playwright Advanced  test automation",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:dev": "TEST_ENV=development npx playwright test",
    "test:staging": "TEST_ENV=staging npx playwright test",
    "test:prod": "TEST_ENV=production npx playwright test",
    "test:ci": "TEST_ENV=ci npx playwright test",
    "test:headless": "HEADLESS=true npx playwright test",
    "test:headed": "HEADLESS=false npx playwright test",
    "test:sanity": "npx playwright test --grep @sanity",
    "test:regression": "npx playwright test --grep @regression",
    "test:robust": "npx playwright test --grep @robust",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    "test:parallel": "npx playwright test --workers=4",
    "test:serial": "npx playwright test --workers=1",
    "report:allure": "npx allure generate allure-results --clean -o allure-report && npx allure open",
    "report:html": "npx playwright show-report",
    "install:browsers": "npx playwright install --with-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnwerMemet/Playwright-Test-Automation---SauceLab.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EnwerMemet/Playwright-Test-Automation---SauceLab/issues"
  },
  "homepage": "https://github.com/EnwerMemet/Playwright-Test-Automation---SauceLab#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "allure-playwright": "^3.4.5"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
